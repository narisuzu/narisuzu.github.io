baseURL = "https://mondaiya.github.io/"
languageCode = "zh-hant"
defaultContentLanguage = "zh-hant"
title = "問題屋"                         # site title  # 网站标题
theme = "stack"
hasCJKLanguage = true                  # has chinese/japanese/korean ?  # 自动检测是否包含 中文\日文\韩文
# summaryLength = 100
paginate = 5                           # shows the number of articles  # 首页显示文章数量
enableEmoji = true
googleAnalytics = ""                   # your google analytics id
disqusShortname = ""                   # your discuss shortname

pygmentsUseClasses = true
pygmentCodeFences = true
pygmentscodefencesguesssyntax = true

[author]                               # essential                     # 必需
  name = "mondaiya"

[blackfriday]
  smartypants = false

[[menu.main]]                          # config your menu  # 配置菜单
  name = "主頁"
  weight = 10
  identifier = "home"
  url = "/"
[[menu.main]]
  name = "歸檔"
  weight = 20
  identifier = "archive"
  url = "/posts/"
[[menu.main]]
  name = "標籤"
  weight = 30
  identifier = "tags"
  url = "/tags/"
[[menu.main]]
  name = "關於"
  weight = 40
  identifier = "about"
  url = "/about/"

[params]
  subTitle = "問題屋へようこそ"                                       # site's subTitle  # 网站二级标题
  footerSlogan = "優雅的數位化習題集"                                   # site's footer slogan  # 网站页脚标语
  keywords = ["習題","問題","題庫"]                                  # site's keywords  # 网站关键字
  enableSummary = false                                                 # display the article summary  # 是否显示文章摘要
  mainSections = ["posts","post"]
  customCSS = ["mondaiya.css"]

  
# Valine.
# You can get your appid and appkey from https://leancloud.cn
# more info please open https://valine.js.org
[params.valine]
  enable = false
  appId = ""
  appKey = ""
# placeholder = " "
  visitor = true

[params.utteranc]         # utteranc is a comment system based on GitHub issues. see https://utteranc.es
  enable = true
  repo = "mondaiya/mondaiya.github.io"    # The repo to store comments
  issueTerm = "pathname"

# Your socail's url
[social]
  github = "https://github.com/mondaiya/mondaiya.github.io"

[markup]
[markup.goldmark]
[markup.goldmark.renderer]
  unsafe = true